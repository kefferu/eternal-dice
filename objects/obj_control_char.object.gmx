          <argument>
            <kind>1</kind>
            <string>///increase or decrease player status based on buff
//bonusArray[0] is atk
//bonusArray[1] is def
//bonusArray[2] is ev
//buffArray :
//1 = atk + 1
//2 = def + 1
//3 = ev + 1
//4 = atk - 1
//5 = def - 1
//6 = ev - 1
//executeBuff -&gt; 0 == true, 1 == false
if global.checkStatus
{
    for (index = 0 ; index &lt;3 ; index++) //to check what buff player got
    {
        switch(global.buffArray[index])
        {
            case 1 : 
                if global.executeBuff[index] == 0 
                {
                    global.bonusArray[0]++;
                    tempArray[index] = 1;
                    global.executeBuff[index] = 1;
                }
            break;
            case 2 : 
                if global.executeBuff[index] == 0 
                {
                    global.bonusArray[1]++;
                    tempArray[index] = 2;
                    global.executeBuff[index] = 1;
                }
            break;
            case 3 : 
                if global.executeBuff[index] == 0
                {
                    global.bonusArray[2]++;
                    tempArray[index] = 3;
                    global.executeBuff[index] = 1;
                }
            case 4 : 
                if global.executeBuff[index] == 0
                {
                    global.bonusArray[0]--;
                    tempArray[index] = 4;
                    global.executeBuff[index] = 1;
                }
            case 5 : 
                if global.executeBuff[index] == 0
                {
                    global.bonusArray[1]--;
                    tempArray[index] = 5;
                    global.executeBuff[index] = 1;
                }
            case 6 : 
                if global.executeBuff[index] == 0
                {
                    global.bonusArray[2]--;
                    tempArray[index] = 6;
                    global.executeBuff[index] = 1;
                }
            break;
            default :  //to erase the bonus buff if buff turn reach 0
                if tempArray[index] == 1
                {
                    global.bonusArray[0]--;
                }
                else if tempArray[index] == 2
                {
                    global.bonusArray[1]--;
                }
                else if tempArray[index] == 3
                {
                    global.bonusArray[2]--;
                }
                else if tempArray[index] == 4
                {
                    global.bonusArray[0]++;
                }
                else if tempArray[index] == 5
                {
                    global.bonusArray[1]++;
                }
                else if tempArray[index] == 6
                {
                    global.bonusArray[2]++;
                }
                tempArray[index] = 0;
                global.executeBuff[index] = 0;
                break;
            }
    }
    obj_player.atk = global.baseAtk + global.bonusArray[0];
    obj_player.def = global.baseDef + global.bonusArray[1];
    obj_player.ev = global.baseEv + global.bonusArray[2];
    global.checkStatus = false;
}
</string>
